{
  "compilerOptions": {
    "sourceMap": false,
    "inlineSourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "es6",
      "es7",
      "es2016",
      "es2017",
      "DOM"
    ],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "test",
    "webpack.config.js"
  ]
}
